{
    // These settings are recommended for a consistent Python development experience.
    // You will need the Ruff extension (charliermarsh.ruff) and the Python
    // extension (ms-python.python) from Microsoft installed.

    "[python]": {
        // Set Ruff as the default formatter for Python files.
        "editor.defaultFormatter": "charliermarsh.ruff",
        // Enable format on save for Python files.
        "editor.formatOnSave": true,
        // Automatically fix linting issues on save.
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit"
        }
    },

    // Exclude common Python and project folders from the file explorer.
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },

    // Exclude common Python folders from search results to reduce noise.
    "search.exclude": {
        "**/__pycache__": true,
        "**/.vscode": true
    },

    // Ensure final newlines and trim whitespace for cleaner git diffs.
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true
}
